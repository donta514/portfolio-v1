---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact - Let's Chat">
  <div class="container">
    <h1>Contact</h1>
    <form
      target="_blank"
      action="https://formsubmit.co/donta.jamel.smith@gmail.com"
      method="POST"
    >
      <div class="form-group">
        <div class="form-row">
          <div class="col">
            <input
              type="text"
              name="name"
              class="form-control"
              placeholder="Full Name"
              required
            />
          </div>
          <div class="col">
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="Email Address"
              required
            />
          </div>
        </div>
      </div>
      <div class="form-group">
        <textarea
          placeholder="Your Message"
          class="form-control"
          name="message"
          rows="10"
          required></textarea>
      </div>
      <button type="submit" class="submit"
        >Submit Form</button
      >
    </form>
  </div>
</Layout>
<style lang="scss">
    .container {
        display: grid;
        justify-content: center;
        gap: 2rem;

    }
</style>
