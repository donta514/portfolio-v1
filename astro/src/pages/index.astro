---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import AboutMe from "../components/AboutMe.astro";
import ContactCard from "../components/ContactCard.astro";
import IntroCard from "../components/IntroCard.astro";
import MediaCard from "../components/MediaCard.astro";
import ProjectOne from "../components/ProjectOne.astro";
import ProjectTwo from "../components/ProjectTwo.astro";
import ProjectThree from "../components/ProjectThree.astro";
---

<Layout title="Donta Smith - Developer, Designer.">
  <Nav />
  <main>
    <section class="wrapper">
      <div class="aboutMe">
        <AboutMe />
      </div>
      <div class="introCard">
        <IntroCard />
      </div>
      <div class="projectOne">
        <ProjectOne />
      </div>
      <div class="projectTwo">
        <ProjectTwo />
      </div>
      <div class="projectThree">
        <ProjectThree />
      </div>
      <div class="contactCard">
        <ContactCard />
      </div>
      <div class="mediaCard">
        <MediaCard />
      </div>
    </section>
  </main>
</Layout>

<style lang="scss">
  $breakpointXs: 320px;
  $breakpointSm: 576px;
  $breakpointMd: 768px;
  $breakpointLg: 992px;
  $breakpointXl: 1200px;
  $breakpointXxl: 1840px;

  main {
    position: relative;
    color: white;
    top: 2rem;
    .wrapper {
      display: grid;
      width: $breakpointXl;
      max-width: calc(100% - 2rem);
      margin-inline: auto;
      align-items: center;
      height: 100svh;
      gap: 1.25rem;
      .aboutMe {
        @media screen and (min-width: $breakpointLg) {
          // display: grid;
          // grid-row: span 4 / span 4;
          // grid-column: span 3 / span 3;
          // grid-template-rows: repeat(8, minmax(0, 1fr));
          // grid-template-columns: repeat(4, minmax(0, 1fr));
        }
      }
      .introCard {
      }
      .projectOne {
        grid-row: span 2 / span 2;
      }
      .mediaCard {
      }
      .projectTwo {
      }
      .projectThree {
      }
      .contactCard {
      }
    }
  }
</style>
