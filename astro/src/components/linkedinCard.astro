---
import Card from "./Card.astro";
import linkedinImg from "../assets/linkedin-logo/linkedIn-White-128.png";
import { Image } from "astro:assets";
---

<Card>
  <div class="linkedinCard">
    <a href="http://linkedin.com/in/dontasmith" target="_blank">
      <Image
        src={linkedinImg}
        alt="linkedin logo"
        width={"100"}
        height={"100"}
        quality={"max"}
      />
    </a>
  </div>
</Card>
<style lang="scss">
  .linkedinCard {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    background: #0866c2;
    box-shadow: transparent 0px 0px 0px 2px inset;
    border-radius: var(--border-radius);
    padding: var(--padding);
    width: 100%;
    cursor: pointer;
  }
  :hover {
    background: hsl(210 92% 44% / 1);
    transition: 0.5s ease 0s;
  }
</style>
