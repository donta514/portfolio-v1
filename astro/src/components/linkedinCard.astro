---
import Card from "./Card.astro";
import linkedinImg from "../assets/linkedin-logos/LinkedIn-Logos/In/Digital/White/2x/In-White-128@2x.png";
import { Image } from "astro:assets";
---

<Card>
  <div class="linkedinCard">
    <a href="http://linkedin.com/in/dontasmith">
      <Image
        src={linkedinImg}
        alt="linkedin logo"
        width={"100"}
        height={"100"}
        quality={"max"}
      />
    </a>
  </div>
</Card>
<style lang="scss">
  .linkedinCard {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    background: #0866c2;
    box-shadow: transparent 0px 0px 0px 2px inset;
    border-radius: var(--border-radius);
    padding: var(--padding);
    width: 100%;
    .img {
    }
  }
</style>
