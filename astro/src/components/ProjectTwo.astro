---
import Card from "./Card.astro";
import { Image } from "astro:assets";
import projectTwo from "../assets/project-images/Netflix-App.png";
---

<Card>
  <div class="projectTwo">
    <a
      href="https://netflix-app-henna-mu.vercel.app/"
      target="_blank"
      class="projectTwo-link"
    >
      <div class="top">
        <Image class="img" src={projectTwo} alt="netflix clone project image" />
      </div>
      <div class="bottom">
        <p class="title">Netflix Clone</p>
        <p class="text">
          A Netflix-inspired streaming app featuring interactive trailers, built
          with React, Styled Components, and the TMDB API. This project
          showcases dynamic UI design, real-time data integration, and a
          responsive layout that mirrors the user experience of a modern
          streaming platform.
        </p>
      </div>
    </a>
  </div>
</Card>

<style>
  .projectTwo {
    padding: var(--padding);
    overflow: hidden;
    .projectTwo-link {
      color: var(--text-color);
      text-decoration: inherit;
      .top {
        display: block;
        margin-right: -24rem;
        .img {
          overflow-clip-margin: content-box;
          display: block;
          vertical-align: middle;
          height: 18rem;
          max-width: 100%;
          object-fit: cover;
          border-radius: 1rem;
        }
      }
      .bottom {
        margin-top: 2rem;
        .title {
          margin-top: 1.5rem;
          font-weight: 700;
          font-size: var(--font-size-lg);
        }
        .text {
          margin-top: 1rem;
          font-size: var(--font-size-lg);
          font-weight: 300;
        }
      }
    }
  }
</style>
