---
import Card from "./Card.astro";
import githubImg from "../assets/github-mark-c791e9551fe4/github-mark/github-mark-white.svg";
import { Image } from "astro:assets";
---

<Card>
  <div class="githubCard">
    <a href="https://github.com/donta514">
      <Image
        class="img"
        src={githubImg}
        alt="github logo"
        width={"100"}
        height={"100"}
        quality={"max"}
      />
    </a>
  </div>
</Card>
<style lang="scss">
  .githubCard {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    background: #793fc7;
    box-shadow: transparent 0px 0px 0px 2px inset;
    border-radius: var(--border-radius);
    padding: var(--padding);
    width: 100%;
    :hover {
        transition: bottom 0.3s;
    }
  }
</style>
