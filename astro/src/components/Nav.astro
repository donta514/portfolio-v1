---
import myImage from "../assets/ds-logo-white.png";
import githubImg from "../assets/github-mark-c791e9551fe4/github-mark/github-mark-white.png";
import linkedinImg from "../assets/linkedin-logos/LinkedIn-Logos/In/Digital/White/1x/In-White-128.png";
import instagramImg from "../assets/IG_brand_asset_pack_2023/01 Static Glyph/02 White Glyph/Instagram_Glyph_White.png";
import { Image } from "astro:assets";

// interface Props {
