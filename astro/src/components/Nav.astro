// const { href, title, body } = Astro.props;
---

<script>
  const navItems = document.querySelectorAll("nav-items");
  const indicator = document.querySelector("nav-items-select");

  navItems.forEach((item) => {
    item.addEventListener("click", () => {
      navItems.forEach((navItem) => {
        navItem.classList.remove("active");
      });

    });
  });
</script>

<nav>
  <div class="nav-logo">
    <Image
      class="nav-img"
      src={myImage}
      alt="professional image"
      width={75}
      height={75}
      quality={"max"}
    />
  </div>
  <div class="nav-item">
    <div class="nav-items-select"></div>
    <div class="nav-items">All</div>
    <div class="nav-items">About</div>
    <div class="nav-items">Projects</div>
    <div class="nav-items">Contact</div>
    <!-- <div class="nav-items-4">Resume</div> -->
  </div>
  <div class="nav-links">
    <Image src={githubImg} alt="" width={24} height={24} quality={"high"} />
    <Image src={linkedinImg} alt="" width={24} height={24} quality={"high"} />
    <!-- <Image src={instagramImg} alt="" width={24} height={24} quality={"high"} /> -->
  </div>
</nav>
<style lang="scss">
  nav {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    place-items: center;
    height: 212px;
    @media screen and (min-width: 768px) {
      display: flex;
      flex-direction: row;
      max-width: 100%;
      height: 136px;
      -webkit-box-align: center;
      align-items: center;
      -webkit-box-pack: justify;
      justify-content: space-between;
      padding: 0px 3.5vw;
    }
    .nav-logo {
      display: block;
      max-width: 100%;
    }
    .nav-item {
      background: transparent;
      border: 2px solid rgb(48, 54, 61);
      border-radius: 23px;
      transform: translateX(0px);
      display: flex;
      font-size: 1rem;
      padding: 5px;
      .nav-items-select {
        left: 5px;
        width: 54px;
        position: absolute;
        height: 32px;
        border-radius: 16px;
        background: rgb(33, 38, 45);
        z-index: -1;
      }
      .nav-items {
        border-radius: 50px;
        display: flex;
        -webkit-box-align: center;
        align-items: center;
        height: 32px;
        padding: 0px 16px;
        transition: opacity 0.3s ease 0s;
        color: rgb(240, 242, 248);
        cursor: pointer;
        &:hover {
          cursor: pointer;
          opacity: 0.5;
          transition: opacity 0.25s ease 0s;
        }
      }
    }
    .nav-links {
      display: flex;
      gap: 1.25em;
    }
  }
</style>
