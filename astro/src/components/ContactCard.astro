<style lang="scss">
  .contactCard {
    position: relative;
    display: flex;
    height: auto;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: var(--padding);
    margin-inline: auto;
    .svg {
      display: block;
      vertical-align: middle;
      height: 6rem;
      width: 6rem;
      color: var(--accent);
