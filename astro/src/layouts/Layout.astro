---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { ClientRouter } from "astro:transitions";
import ThemeProvider from "../components/ThemeProvider.astro";
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0d1117" />
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <ClientRouter />
    <meta
      name="description"
      content="Dontá Smith is a web developer specializing in creating innovative web experiences. He is based in Washington, D.C."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.dontasmith.com/" />
    <meta property="og:title" content="Dontá Smith — Developer, Designer" />
    <meta
      property="og:description"
      content="Dontá Smith is a web developer specializing in creating innovative web experiences. He is based in Washington, D.C."
    />
    <meta property="og:image" content="/public/dontasmith-og-image.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.dontasmith.com/" />
    <meta
      property="twitter:title"
      content="Dontá Smith — Developer, Designer"
    />
    <meta
      property="twitter:description"
      content="Dontá Smith is a web developer specializing in creating innovative web experiences. He is based in Washington, D.C."
    />
    <meta property="twitter:image" content="/public/dontasmith-og-image.jpg" />
  </head>
  <body>
    <ThemeProvider>
      <slot />
    </ThemeProvider>
    <Analytics />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Anton&family=Inter:wght@100..900&display=swap");

  :root {
    --primary-font: "Anton", sans-serif;
    --secondary-font: "Inter", sans-serif;
    --border-radius: 32px;
    --padding: max(3vh, 1rem) 1.5rem;
    --font-size-lg: clamp(0.875rem, 0.7386rem + 0.6818vw, 1.25rem);
    --font-size-xl: clamp(2rem, 1.0476rem + 4.7619vw, 4rem);
  }

  [data-theme="light"] {
    --button-bg: rgb(221, 200, 255);
    --text-color: #000000;
    --html-bg: #ffffff;
    --card-bg: #fafafa;
    --border-color: rgb(48, 54, 61);
    --button-hover-bg: rgb(193, 165, 247);
  }

  [data-theme="dark"] {
    --html-bg: #000000;
    --text-color: #ffffff;
    --button-bg: rgb(136, 58, 234);
    --button-hover-bg: rgb(49, 10, 101);
    --card-bg: #0d1117;
    --border-color: rgb(48, 54, 61);
  }

  html {
    overflow: scroll;
    overflow-x: hidden;
  }
  ::-webkit-scrollbar {
    width: 0; /* Remove scrollbar space */
    /* background: transparent; Optional: just make scrollbar invisible */
  }
  /* Optional: show position indicator in red */
  ::-webkit-scrollbar-thumb {
    background: #ff0000;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: var(--secondary-font);
    line-height: 1.5;
    background-color: var(--html-bg);
    color: var(--text-color);
    background-image: url("https://donta.us-iad-1.linodeobjects.com/images/portfolio/Pattern.svg");
    background-size: inherit;
    background-repeat: no-repeat;
    background-position: center;
    @media screen and (min-width: 1440px) {
      background-size: cover;
    }
  }
</style>
